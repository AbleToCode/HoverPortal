<Window x:Class="HoverPortal.Views.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:HoverPortal.Behaviors"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="é¢„è§ˆ"
        MouseLeave="Window_MouseLeave"
        SourceInitialized="Window_SourceInitialized">


    
    <Window.Resources>
        <!-- å¼¹ç°§ç¼“åŠ¨å‡½æ•° -->
        <ElasticEase x:Key="SpringEase" Oscillations="1" Springiness="5" EasingMode="EaseOut"/>
        <QuadraticEase x:Key="SmoothEase" EasingMode="EaseOut"/>
        
        <!-- æ–‡ä»¶é¡¹æ ·å¼ -->
        <Style x:Key="FileItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ItemBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" 
                                        Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" 
                                        Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- ä¸»å®¹å™¨ -->
    <Border x:Name="MainBorder"
            CornerRadius="16"
            Background="#E0202020"
            BorderBrush="#40FFFFFF"
            BorderThickness="1"
            Padding="12"
            Opacity="0"
            Width="320"
            Height="280"
            RenderTransformOrigin="0.5,0.5">

        <Border.RenderTransform>
            <ScaleTransform x:Name="WindowScale" ScaleX="0.8" ScaleY="0.8"/>
        </Border.RenderTransform>
        

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- æ–‡ä»¶å¤¹æ ‡é¢˜ -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="ðŸ“" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="FolderNameText" 
                           Text="{Binding FolderName}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- æ–‡ä»¶åˆ—è¡¨ç½‘æ ¼ -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent">

                <ItemsControl x:Name="FileGrid" ItemsSource="{Binding Files}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource FileItemStyle}"
                                    Command="{Binding DataContext.OpenFileCommand, 
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="{Binding Name}"
                                    behaviors:FileDragBehavior.EnableDrag="True"
                                    behaviors:FileDragBehavior.DragData="{Binding}">

                                <StackPanel HorizontalAlignment="Center" Width="60">
                                    <!-- ä½¿ç”¨ç³»ç»Ÿå›¾æ ‡ï¼Œå¦‚æžœå¤±è´¥åˆ™æ˜¾ç¤º emoji -->
                                    <Grid Height="32" Width="32" HorizontalAlignment="Center">
                                        <Image Source="{Binding Icon}" 
                                               Width="32" Height="32"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                        <!-- Emoji å¤‡ç”¨ (å½“ Icon ä¸º null æ—¶ä¼šæ˜¾ç¤º) -->
                                        <TextBlock Text="{Binding IconEmoji}" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding Icon, Converter={StaticResource NullToVisibility}, ConverterParameter=Invert}"/>

                                    </Grid>
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="11"
                                               Foreground="#CCCCCC"
                                               TextTrimming="CharacterEllipsis"
                                               HorizontalAlignment="Center"
                                               MaxWidth="58"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- ç©ºçŠ¶æ€æç¤º -->
            <TextBlock Grid.Row="1"
                       Text="æ­¤æ–‡ä»¶å¤¹ä¸ºç©º"
                       Foreground="#808080"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibility}}"/>
        </Grid>
    </Border>
</Window>

